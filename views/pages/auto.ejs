<!-- views/pages/about.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>

    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">

            <div class="panel panel-default">
                <div class="panel-heading">Новый автомобиль</div>
                <div class="panel-body">
                    <form role="form" method="POST" action="/auto">
                        <div class="form-group" style="display:none;">
                            <label>Id</label>
                            <input type="text" name="id" class="form-control" value="<%=auto ? auto.Id : '' %>">
                        </div>
                        <div class="form-group">
                            <label>Название</label>
                            <input type="text" name="name" class="form-control" value="<%=auto ? auto.Name : '' %>">
                        </div>
                        <div class="form-group">
                            <label>Год выпуска</label>
                            <input type="number" id="year" name="year" class="form-control" value="<%=auto ? auto.Year : '' %>">
                        </div>
                        <div class="form-group">
                            <label>Цена</label>
                            <input type="number" name="price" class="form-control" value="<%=auto ? auto.Price : '' %>">
                        </div>
                        <input type="submit" class="btn btn-primary" value="<%=auto ? 'Обновить' : 'Добавить' %>">
                    </form>
                </div>
            </div>

        </div>
        <div class="col-md-2">&nbsp;</div>
    </div>

</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>